---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found">
  <div class="text-center py-20">
    <h1 class="text-6xl font-bold text-[#d0d0d8] dark:text-[#222332] mb-4">404</h1>
    <p class="text-xl text-[#505058] dark:text-[#a0a0a8] mb-8">Page not found</p>
    <a
      href="/"
      class="inline-block px-6 py-3 bg-brand-primary text-white rounded hover:bg-brand-primary-dark transition-colors"
    >
      Back to home
    </a>
  </div>
</BaseLayout>
