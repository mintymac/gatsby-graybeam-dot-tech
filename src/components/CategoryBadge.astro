---
import { categorySlug } from "../utils/slugify";

interface Props {
  category: string;
  linked?: boolean;
}

const { category, linked = true } = Astro.props;
const slug = categorySlug(category);
---

{linked ? (
  <a
    href={`/category/${slug}/`}
    class="inline-block px-2 py-0.5 text-xs font-medium rounded bg-brand-primary/10 text-brand-primary dark:bg-brand-primary-light/10 dark:text-brand-primary-light hover:bg-brand-primary/20 dark:hover:bg-brand-primary-light/20 transition-colors"
  >
    {category}
  </a>
) : (
  <span class="inline-block px-2 py-0.5 text-xs font-medium rounded bg-brand-primary/10 text-brand-primary dark:bg-brand-primary-light/10 dark:text-brand-primary-light">
    {category}
  </span>
)}
