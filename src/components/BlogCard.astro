---
import CategoryBadge from "./CategoryBadge.astro";

interface Props {
  title: string;
  slug: string;
  date: Date;
  category?: string;
  author?: string;
}

const { title, slug, date, category, author } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="group">
  <a href={`/${slug}/`} class="block py-6 -mx-2 px-2 rounded hover:bg-[#f5f5f7] dark:hover:bg-[#121215] transition-colors">
    <div class="flex items-center gap-3 mb-2 text-sm text-[#909098] dark:text-[#606068]">
      <time datetime={date.toISOString()}>{formattedDate}</time>
      {category && <CategoryBadge category={category} />}
    </div>
    <h2 class="text-xl font-semibold text-[#121215] dark:text-[#f0f0f2] group-hover:text-brand-primary dark:group-hover:text-brand-primary-light transition-colors">
      {title}
    </h2>
    {author && (
      <p class="mt-1 text-sm text-[#909098] dark:text-[#606068]">
        by {author}
      </p>
    )}
  </a>
</article>
