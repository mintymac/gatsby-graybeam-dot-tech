---
import CategoryBadge from "./CategoryBadge.astro";

interface Props {
  date: Date;
  category?: string;
  author?: string;
}

const { date, category, author } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="flex flex-wrap items-center gap-3 text-sm text-[#909098] dark:text-[#606068] mb-8">
  <time datetime={date.toISOString()}>{formattedDate}</time>
  {category && <CategoryBadge category={category} />}
  {author && <span>by {author}</span>}
</div>
